<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dadesheng.simplerss.AboutActivity">


    <TextView
        android:id="@+id/about_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rotman in the news"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/about_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_headline"
        android:paddingTop="10sp"
        android:text="@string/actionbar_content" />

    <ImageView
        android:id="@+id/UofTLogo"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_below="@id/about_content"
        android:layout_centerVertical="true"
        android:src="@drawable/uoft_logo_white" />

    <Button
        android:id="@+id/btnAboutDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/UofTLogo"
        android:text="Done" />
</RelativeLayout>
